.slide
  .hmodal-success
    .modal-dialog
      .modal-content
        .color-line
        .modal-header
          %span.fr{"aria-hidden" => "true", type: "button", "data-dismiss" => "modal"}
            %i.fal.fa-times.fa-2x
          %h2.font-bold Company Name
          %h5 Please provide Company Name
        .modal-body
          .row
            .col-md-12
              .form-group
                = comp.label :name, "Company Name"
                = comp.text_field :name, :class=>"form-control", :placeholder => "Company Name", :required=>true
          .row
            .col-md-12{:id=>"#{create_source == 'contact' ? 'display_cont_comp_info' : 'display_comp_info'}"}
        .modal-footer
          - if create_source == 'contact'
            %a.comp-pager-prev.btn.w-xs.btn-success.fl{:href => "javascript:void(0)"}
              %i.icon-chevron-left
              Prev
          %a.comp-pager-next.btn.w-xs.btn-success.fr{:href => "javascript:void(0)", :type => "comp_name",:id=>"#{create_source == 'contact' ? 'comp-next-btn' : 'comp-cont-next-btn'}"}
            %i.icon-chevron-right
            Next
          .cb
