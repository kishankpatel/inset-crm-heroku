.login-container
  .row
    .col-md-12
      .text-center.m-b-md
        %h3 Forgot your password?
        %small 
      .hpanel
        .panel-body
          %p
            Please fill the form to change your password
          = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
            .displaynone= devise_error_messages!
            = f.hidden_field :reset_password_token
            .form-group      
              = f.password_field :password, :required => true, :class=>"form-control", :placeholder=>"******"
              %span.help-block.small Your New Password
            .form-group      
              = f.password_field :password_confirmation, :required => true, :class=>"form-control", :placeholder=>"******"
              %span.help-block.small Confirm your new password
            %div
              %button.btn.btn-primary.btn-success{:type => "submit"}
                Change Password
          
