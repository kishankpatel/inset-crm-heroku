              =text_field_tag 'company', "#{@current_organization.present? ? @current_organization.name : ''}",:size=>'32' ,:class=>'company_name_typeahead custom-frm-inner', 'data-provide'=> 'typeahead' , :autocomplete=>'off', onkeyup:"$('#text_loader').show()"
