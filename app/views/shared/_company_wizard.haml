  .hmodal-success
    .modal-dialog
      .modal-content
        .color-line
        .modal-header
          %span.fr{"aria-hidden" => "true", type: "button", "data-dismiss" => "modal"}
            %i.fal.fa-times.fa-2x
          %h2.font-bold Your Company Phone Number
        .modal-body
          = comp.fields_for :phones do |comp_phone|
            = comp_phone.hidden_field :phone_type, :value => "Work"
            .row
              .col-md-4
                .form-group
                  = comp_phone.label :extension, "Area Code"
                  = comp_phone.text_field :extension, :class=>"form-control", :placeholder=>"Area Code", onkeydown: "plusandnumbersonly(event);", :required=>true
              .col-md-8
                .form-group
                  = comp_phone.label :phone_no, "Company Phone number"
                  = comp_phone.text_field  :phone_no, :class=>"form-control", :placeholder=>"Company Phone number",:required=>true, onkeydown: "numbersonly(event);"
        .modal-footer
          %a.comp-pager-prev.btn.w-xs.btn-success.fl{:href => "javascript:void(0)"}
            %i.icon-chevron-left>
            Prev
          %a.comp-pager-next.btn.w-xs.btn-success.fr{:href => "javascript:void(0)", :type => "comp_phone_field"}
            %i.icon-chevron-right>
            Next
          .cb
