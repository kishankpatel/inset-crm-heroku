              /     %div.fr.btn.btn-primary{style: "color: #fff;"}
              /       = link_to "Add to CRM", "user/add_plug_in/#{plug_in.id}", data:{id: "plug_in_#{plug_in.id}"}, style: "text-decoration: none;color: #fff" 
              /   - else
              /     %div.fr.btn.btn-success
              /       = link_to "Added to CRM", "javascript:void(0)", data:{id: "plug_in_#{plug_in.id}"}, style: "text-decoration: none;color: #fff"
    - else
      %div{style: "margin:20px 0; text-align: center; font-size: 20px; color: #D46868"}
        No Plugins Found