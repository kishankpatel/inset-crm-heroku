        return false;
      }
      var conf = confirm("This will permanently delete the selected messages. Do you want to Continue?");
      if (!conf) {
        return conf;
      }
      var selectedIds = [];
      selectedRows.each(function () {
        selectedIds.push($(this).data("id"));
      });
