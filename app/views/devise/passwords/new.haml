.login-container
  .row
    .col-md-12
      .text-center.m-b-md
        %h3 Forgot your password?
        %small 
      .hpanel
        .panel-body
          %p
            Enter your email address and your password will be reset and emailed to you.

          = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form" }) do |f|
            .displaynone= devise_error_messages!
            .form-group
              = f.email_field :email, :class=>"form-control", :placeholder => "Email",:required => true
              %span.help-block.small Your registered email address

            %div
              %button.btn.btn-primary.btn-success{:type => "submit"}
                Send me reset password instructions
                %span.cwkp-sprite.send_icon_1
          %span.help-block.small 
            /.facing_prob_sec
            %p
              Facing any problem? Write to us at
              %span
                "
                %a{:href => "mailto:support@parkpointsoftware.com"}> support@parkpointsoftware.com
                ".
