  .hmodal-success
    .modal-dialog
      .modal-content
        .color-line
        .modal-header
          %span.fr{"aria-hidden" => "true", type: "button", "data-dismiss" => "modal"}
            %i.fal.fa-times.fa-2x
          %h2.font-bold Company Address
          %h5 Please enter your organizations primary billing or shipping address
        .modal-body
          .row
            = comp.fields_for :address do |comp_addr|
              .col-md-12
                .form-group
                  = comp_addr.label :address,"Street Address"
                  = comp_addr.text_field  :address, :class=>"form-control", :placeholder=>"Street Address"
              .col-md-6
                .form-group
                  = comp_addr.label :city
                  = comp_addr.text_field   :city, :class=>"form-control", :placeholder=>"City",:required=>true
              .col-md-6
                .form-group
                  = comp_addr.label :state,"State / Province"
                  = comp_addr.text_field   :state, :class=>"form-control", :placeholder=>"State / Province",:required=>true
              .col-md-6
                .form-group
                  = comp_addr.label :zipcode,"Postal / Zip Code"
                  = comp_addr.text_field  :zipcode, :class=>"form-control", :placeholder=>"Postal / Zip Code"
              .col-md-6
                .form-group
                  = comp_addr.label :country_id , "Country"
                  = comp_addr.select :country_id, Country.find(:all).collect {|c| [ c.name, c.id ]}, {},{:class => "form-control js-source-states", :placeholder => "Country"}
        .modal-footer
          %a.comp-pager-prev.btn.w-xs.btn-success.fl{:href => "javascript:void(0)"}
            %i.icon-chevron-left>
            Prev
          %a.comp-pager-next.btn.w-xs.btn-success.fr{:href => "javascript:void(0)", :type => "comp_address_field"}
            %i.icon-chevron-right>
            Next
