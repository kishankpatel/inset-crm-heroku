:javascript
  $( ".custom-frm-inner" ).focusout(function() {
    if($(this).val() == ""){
      $(this).parent().next('.control-label').removeClass("send-lbl-add-left");
    }else{
      $(this).parent().next('.control-label').addClass("send-lbl-add-left");
    }
  });